From 92e311db10eb9e2d0b18dc7b16d932e474326fb3 Mon Sep 17 00:00:00 2001
From: Algent Albrahimi <algent@protonmail.com>
Date: Tue, 15 Nov 2022 18:32:51 +0100
Subject: [PATCH] Make theme work with docutils 0.18+

Signed-off-by: Algent Albrahimi <algent@protonmail.com>
---
 setup.cfg                              | 2 +-
 sphinx_rtd_theme.egg-info/requires.txt | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/setup.cfg b/setup.cfg
index afd56e2..9e6c2af 100644
--- a/setup.cfg
+++ b/setup.cfg
@@ -45,7 +45,7 @@ packages = sphinx_rtd_theme
 python_requires = >=2.7,!=3.0.*,!=3.1.*,!=3.2.*,!=3.3.*
 install_requires = 
 	sphinx >=1.6,<6
-	docutils <0.18
+	docutils <=0.19
 tests_require = 
 	pytest
 
diff --git a/sphinx_rtd_theme.egg-info/requires.txt b/sphinx_rtd_theme.egg-info/requires.txt
index 719654b..5bc7761 100644
--- a/sphinx_rtd_theme.egg-info/requires.txt
+++ b/sphinx_rtd_theme.egg-info/requires.txt
@@ -1,5 +1,5 @@
 sphinx<6,>=1.6
-docutils<0.18
+docutils=<0.19
 
 [dev]
 transifex-client
